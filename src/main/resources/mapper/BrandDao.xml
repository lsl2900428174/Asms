<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trkj.asms.dao.BrandDao">

    <resultMap type="com.trkj.asms.entity.Brand" id="BrandMap">
        <result property="bId" column="b_id" jdbcType="INTEGER"/>
        <result property="sId" column="s_id" jdbcType="INTEGER"/>
        <result property="bName" column="b_name" jdbcType="VARCHAR"/>
        <result property="bState" column="b_state" jdbcType="INTEGER"/>
    </resultMap>

    <select id="findall" resultMap="BrandMap">
        select * from brand
    </select>
    <!--查询单个-->
    <select id="queryById" resultMap="BrandMap">
        select
          b_id, s_id, b_name, b_state
        from asms.brand
        where b_id = #{bId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BrandMap">
        select
          b_id, s_id, b_name, b_state
        from asms.brand
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BrandMap">
        select
        b_id, s_id, b_name, b_state
        from asms.brand
        <where>
            <if test="bId != null">
                and b_id = #{bId}
            </if>
            <if test="sId != null">
                and s_id = #{sId}
            </if>
            <if test="bName != null and bName != ''">
                and b_name = #{bName}
            </if>
            <if test="bState != null">
                and b_state = #{bState}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="bId" useGeneratedKeys="true">
        insert into asms.brand(s_id, b_name, b_state)
        values (#{sId}, #{bName}, #{bState})
    </insert>

    <insert id="insertBatch" keyProperty="bId" useGeneratedKeys="true">
        insert into asms.brand(s_id, b_name, b_state)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.sId}, #{entity.bName}, #{entity.bState})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="bId" useGeneratedKeys="true">
        insert into asms.brand(s_id, b_name, b_state)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.sId}, #{entity.bName}, #{entity.bState})
        </foreach>
        on duplicate key update
        s_id = values(s_id) , b_name = values(b_name) , b_state = values(b_state)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update asms.brand
        <set>
            <if test="sId != null">
                s_id = #{sId},
            </if>
            <if test="bName != null and bName != ''">
                b_name = #{bName},
            </if>
            <if test="bState != null">
                b_state = #{bState},
            </if>
        </set>
        where b_id = #{bId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from asms.brand where b_id = #{bId}
    </delete>

</mapper>


<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trkj.asms.dao.ProductsalesDao">

    <resultMap id="BaseResultMap" type="com.trkj.asms.entity.Productsales">
        <!--@Table productsales-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="saleCode" column="sale_code" jdbcType="VARCHAR"/>
        <result property="cId" column="c_id" jdbcType="INTEGER"/>
        <result property="eId" column="e_id" jdbcType="INTEGER"/>
        <result property="saleTime" column="sale_time" jdbcType="TIMESTAMP"/>
        <result property="remarks" column="remarks" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, sale_code, c_id, e_id, sale_time, remarks
        from asms.productsales
        where  = #{}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, sale_code, c_id, e_id, sale_time, remarks
        from asms.productsales
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, sale_code, c_id, e_id, sale_time, remarks
        from asms.productsales
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="saleCode != null and saleCode != ''">
                and sale_code = #{saleCode}
            </if>
            <if test="cId != null">
                and c_id = #{cId}
            </if>
            <if test="eId != null">
                and e_id = #{eId}
            </if>
            <if test="saleTime != null">
                and sale_time = #{saleTime}
            </if>
            <if test="remarks != null and remarks != ''">
                and remarks = #{remarks}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into asms.productsales(id, sale_code, c_id, e_id, sale_time, remarks)
        values (#{id}, #{saleCode}, #{cId}, #{eId}, #{saleTime}, #{remarks})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update asms.productsales
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="saleCode != null and saleCode != ''">
                sale_code = #{saleCode},
            </if>
            <if test="cId != null">
                c_id = #{cId},
            </if>
            <if test="eId != null">
                e_id = #{eId},
            </if>
            <if test="saleTime != null">
                sale_time = #{saleTime},
            </if>
            <if test="remarks != null and remarks != ''">
                remarks = #{remarks},
            </if>
        </set>
        where  = #{}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from asms.productsales where  = #{}
    </delete>

</mapper>
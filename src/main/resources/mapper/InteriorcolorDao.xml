<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trkj.asms.dao.InteriorcolorDao">

    <resultMap type="com.trkj.asms.entity.Interiorcolor" id="InteriorcolorMap">
        <result property="iId" column="i_id" jdbcType="INTEGER"/>
        <result property="iName" column="i_name" jdbcType="VARCHAR"/>
        <result property="iState" column="i_state" jdbcType="INTEGER"/>
    </resultMap>

    <select id="findall" resultMap="InteriorcolorMap">
        select * from interiorcolor
    </select>
    <!--查询单个-->
    <select id="queryById" resultMap="InteriorcolorMap">
        select
          i_id, i_name, i_state
        from asms.interiorcolor
        where i_id = #{iId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="InteriorcolorMap">
        select
          i_id, i_name, i_state
        from asms.interiorcolor
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="InteriorcolorMap">
        select
        i_id, i_name, i_state
        from asms.interiorcolor
        <where>
            <if test="iId != null">
                and i_id = #{iId}
            </if>
            <if test="iName != null and iName != ''">
                and i_name = #{iName}
            </if>
            <if test="iState != null">
                and i_state = #{iState}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="iId" useGeneratedKeys="true">
        insert into asms.interiorcolor(i_name, i_state)
        values (#{iName}, #{iState})
    </insert>

    <insert id="insertBatch" keyProperty="iId" useGeneratedKeys="true">
        insert into asms.interiorcolor(i_name, i_state)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.iName}, #{entity.iState})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="iId" useGeneratedKeys="true">
        insert into asms.interiorcolor(i_name, i_state)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.iName}, #{entity.iState})
        </foreach>
        on duplicate key update
        i_name = values(i_name) , i_state = values(i_state)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update asms.interiorcolor
        <set>
            <if test="iName != null and iName != ''">
                i_name = #{iName},
            </if>
            <if test="iState != null">
                i_state = #{iState},
            </if>
        </set>
        where i_id = #{iId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from asms.interiorcolor where i_id = #{iId}
    </delete>

</mapper>

